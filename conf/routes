# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /index                           controllers.Application.index()

GET     /perfilDriver                  controllers.UserController.showPerfil()

GET     /                              controllers.UserController.showLogin()

GET     /login                         controllers.UserController.showLogin()

GET     /register                      controllers.UserController.showRegister()

GET     /newCarona/:token                     controllers.CaronaController.showNewCarona(token: String)

POST     /newCarona                    controllers.CaronaController.createCarona()



# Map static resources from the /public folder to the /assets URL path

GET      /assets/*file                  controllers.Assets.at(path="/public", file)

POST    /login                          controllers.UserController.authenticate()

GET    /logout                         controllers.UserController.logout()

GET     /perfilpassenger                controllers.UserController.changeUser()

POST    /setLanguage/:language          controllers.UserController.setLanguage(language: String)


POST    /solicitations/accept/:id       controllers.CaronaController.acceptSolicitation(id: Integer)

DELETE    /solicitations/reject/:id       controllers.CaronaController.rejectSolicitation(id: Integer)

DELETE    /carona/reject/:id                controllers.CaronaController.rejectCarona(id: Integer)

POST    /carona/askForDriver/:id        controllers.CaronaController.askCaronaForDriver(id: Integer)

POST    /register                       controllers.UserController.register()

POST    /updateData                      controllers.UserController.updateData()

GET     /updateData                      controllers.UserController.showUpdateData()

GET      /assets/*file                  controllers.Assets.versioned(path="/public", file: Asset)
